<div class='item task-item' task-id={{_id}}>
    {{#if completed }}
        <input type='checkbox' name={{_id}} checked style = 'float:left;'>
    {{else}}
        <input type='checkbox' name={{_id}} style = 'float:left;'>
    {{/if}}
    <label>
        <div style='float:left;'>
            <div class='description'>{{description}}
                {{#if month}}
                	&#40;<div class='month'>{{month}}</div>&#47;<div class='day'>{{day}}</div>&#47;<div class='year'>{{year}}</div>&#41;
                {{/if}}
            </div>
        </div>
    </label>
    
</div>
