{{! primary author: Catherine }}
<div class='item task-item' phase-id={{phase}} task-id={{_id}}>
    {{#if completed }}
        <input type='checkbox' name={{_id}} checked style = 'float:left;'>
    {{else}}
        <input type='checkbox' name={{_id}} style = 'float:left;'>
    {{/if}}
    <label class = 'task-content'>
        <div style='float:left;'>
        <div class='description'>{{description}}</div>
    	(
        <div class='month'>{{getMonth dueDate}}</div>
        /
        <div class='day'>{{getDay dueDate}}</div>
        /
        <div class='year'>{{getYear dueDate}}</div>
        )
        </div>
    </label>
    
</div>
